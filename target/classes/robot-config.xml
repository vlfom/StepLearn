<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean name="body" class="com.vlfom.steplearn.core.robot.body.Body">
        <constructor-arg index="0" value="50"/>
        <constructor-arg index="1" value="100"/>
        <constructor-arg index="2" value="5"/>
    </bean>
    <bean name="robot" class="com.vlfom.steplearn.core.robot.Robot">
        <constructor-arg ref="body"/>
    </bean>
</beans>